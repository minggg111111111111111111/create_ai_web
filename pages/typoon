import numpy as np
import matplotlib.pyplot as plt

# Synthetic data for demonstration purposes
# Years from 1980 to 2020
years = np.arange(1980, 2021)

# Frequency of typhoons per year (increasing trend due to global warming)
frequency = 15 + 0.1 * (years - 1980) + np.random.normal(0, 1.5, len(years))

# Intensity index of typhoons per year (increasing trend due to global warming)
intensity = 80 + 0.5 * (years - 1980) + np.random.normal(0, 5, len(years))

# Plotting the data
plt.figure(figsize=(14, 6))

# Frequency Plot
plt.subplot(1, 2, 1)
plt.plot(years, frequency, color='b', marker='o')
plt.xlabel('Year')
plt.ylabel('Frequency of Typhoons')
plt.title('Typhoon Frequency Over the Years')
plt.grid(True)

# Intensity Plot
plt.subplot(1, 2, 2)
plt.plot(years, intensity, color='r', marker='o')
plt.xlabel('Year')
plt.ylabel('Intensity Index of Typhoons')
plt.title('Typhoon Intensity Over the Years')
plt.grid(True)

plt.tight_layout()
plt.show()
